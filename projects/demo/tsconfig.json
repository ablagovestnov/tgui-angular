{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "../../dist/out-tsc/lib",
      "declaration": true,
      "declarationMap": true,
      "inlineSources": true,
      "sourceMap": true,
      "types": [],
      "paths": {
        "@services/*": ["../tgui/src/lib/services/*"],
        "@components/*": ["../tgui/src/lib/components/*"],
        "@utils/*": ["../tgui/src/lib/components/utils/*"],
        "@feedback/*": ["../tgui/src/lib/components/feedback/*"],

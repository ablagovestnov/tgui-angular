        "@form/*": ["../tgui/src/lib/components/form/*"],
        "@layout/*": ["../tgui/src/lib/components/layout/*"],
        "@misc/*": ["../tgui/src/lib/components/misc/*"],
        "@navigation/*": ["../tgui/src/lib/components/navigation/*"],
        "@overlays/*": ["../tgui/src/lib/components/overlays/*"],
        "@typography/*": ["../tgui/src/lib/components/typography/*"],
        "@directives/*": ["../tgui/src/lib/directives/*"],
        "@lib/*": ["../tgui/src/lib/*"]
